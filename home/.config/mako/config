# 注意: mako 配置不支持行内注释!

# 默认配置
default-timeout=2500

format=%s\n%b

layer=overlay
anchor=top-center

font=Inter SemiBold 12

# 文字水平居中
text-alignment=center

width=320
height=240
margin=24
padding=12
border-size=2
border-radius=16

background-color=#F5F5F5f2
border-color=#48CFCBf2
text-color=#424242

# 低优先级通知
[urgency=low]
default-timeout=1000

# 重要通知
[urgency=critical]
default-timeout=0
background-color=#ff8282d9

# --- 需要覆盖配置的 app ---

[app-name=visuals]
anchor=center
margin=360,0,0,0
width=120

# 测试:
# makoctl reload && notify-send "测试标题" "这是一个默认风格通知"
# makoctl reload && notify-send -u low "低级通知" "这是一个低级通知"
# makoctl reload && notify-send -u critical "紧急！" "这是一个紧急通知"

# 位置可选: top-right, top-center, top-left, bottom-right, bottom-center, bottom-left, center
