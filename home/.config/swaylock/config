# ~/.config/swaylock/config

show-failed-attempts
ignore-empty-password

image=~/Pictures/PFP/lock_wall.png
scaling=fill

# 圆环大小
indicator-radius=100
indicator-thickness=12

# 一直显示圆环
# indicator-idle-visible

# 全透明，即圆圈内部是空的，可以看到背景
inside-color=00000000
inside-clear-color=00000000
inside-ver-color=00000000
inside-wrong-color=00000000

# color: https://colorhunt.co/palette/ffdcdcfff2ebffe8cdffd6ba

# 默认状态下，外层圆环的颜色
ring-color=FFF2EB

# 正在验证密码时，外层圆环的颜色
ring-ver-color=FFF2EB

# 输入清空时，外层圆环闪烁的颜色
ring-clear-color=C5C7BC

# 密码错误时，外层圆环的颜色
ring-wrong-color=FF8282

# 围绕圆环的细线颜色
line-color=424242

# 环形中间的分隔符颜色
separator-color=424242

# 文字颜色
text-color=F5F5F5
text-ver-color=F5F5F5
text-clear-color=F5F5F5
text-wrong-color=F5F5F5

# 每当你按下一个字符键时，圆环上闪过的高亮颜色
key-hl-color=FFD6BA

# 每当你按下退格键时，圆环上闪过的高亮颜色
bs-hl-color=C5C7BC

# 键盘布局文字颜色
layout-text-color=F5F5F5
