# ~/.config/sway/configs/exec

# 自启动

# 笔记:
# exec_always: 每次 reload 配置时都会运行

# todo: 还不知道要不要:
# 启动时将这些变量导入到 systemd 和 dbus 环境中
# 否则 xdg-desktop-portal (屏幕共享、文件弹窗) 会不知道你在用 sway

exec systemctl --user import-environment WAYLAND_DISPLAY XDG_CURRENT_DESKTOP
exec hash dbus-update-activation-environment 2>/dev/null && \
     dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP

exec nm-applet --indicator
exec waybar
exec swww-daemon
exec foot --server
exec mako
exec fcitx5 -d
exec wl-paste --watch cliphist store
exec wl-clip-persist --clipboard regular
exec /usr/bin/lxqt-policykit-agent
exec env LC_ALL=C thunar --daemon

# 自动锁屏
# exec swayidle

exec ~/.config/sway/scripts/auto/gsettings.sh
exec ~/.config/sway/scripts/auto/hello-server.sh
